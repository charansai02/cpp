#include <iostream>
#include <cmath>
using namespace std;

int
main ()
{
  int a, b;
  int ch;
  cout <<
    "Enter your choice:\n1. Addition\n2. Subtraction\n3. Division\n4. Multiplication\n5. Absolute\n6. Square root\n\n";
  cin >> ch;
  switch (ch)
    {
    case 1:
      cout << "Enter 2 numbers: ";
      cin >> a >> b;
      cout << a + b;
      break;
    case 2:

      cout << "Enter 2 numbers: ";
      cin >> a >> b;
      cout << a - b;
      break;
    case 3:
      cout << "Enter 2 numbers: ";
      cin >> a >> b;
      cout << a / b;
      break;
    case 4:
      cout << "Enter 2 numbers: ";
      cin >> a >> b;
      cout << a * b;
      break;
    case 5:
      cout << "Enter number: ";
      cin >> a;
      cout << abs (a);
      break
    case 6:
      cout << "Enter number: ";
      cin >> a;
      cout << sqrt (a);
      break;
    default:
      cout << "Invalid choice!";
      break;
    }
  return 0;
}
